<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lin_module1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/trans_20px"
        android:paddingLeft="@dimen/trans_30px"
        android:paddingTop="@dimen/trans_20px">

        <ImageView
            android:id="@+id/iv_module1"
            android:layout_width="@dimen/trans_15px"
            android:layout_height="@dimen/trans_15px"
            android:layout_marginRight="@dimen/trans_10px"
            android:scaleType="centerInside"
            android:src="@drawable/xiangqing"
            />

        <TextView
            android:id="@+id/tv_module1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="通知公告"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_18px"/>

    </LinearLayout>
</RelativeLayout>