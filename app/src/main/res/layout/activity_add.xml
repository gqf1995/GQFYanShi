<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/include_toolbar_with_statusbar"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/trans_30px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/trans_20px"
        android:paddingRight="@dimen/trans_20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/trans_10px"
            android:text="文件字号"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_18px"/>

        <LinearLayout
            android:id="@+id/lin_attributes"
            android:layout_width="@dimen/trans_190px"
            android:layout_height="@dimen/trans_35px"
            android:background="@drawable/shape_grey_border_radiu5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_attributes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="输入文件字号"
                android:paddingLeft="@dimen/trans_5px"
                android:text=""
                android:textColor="@color/color_font1"
                android:textColorHint="@color/color_font3"
                android:textSize="@dimen/text_trans_16px"/>


        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/trans_10px"
            android:text="文件名称"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_18px"/>

        <LinearLayout
            android:id="@+id/lin_attributes2"
            android:layout_width="@dimen/trans_190px"
            android:layout_height="@dimen/trans_35px"
            android:background="@drawable/shape_grey_border_radiu5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_attributes2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="输入文件名称"
                android:paddingLeft="@dimen/trans_5px"
                android:text=""
                android:textColor="@color/color_font1"
                android:textColorHint="@color/color_font3"
                android:textSize="@dimen/text_trans_16px"/>


        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/trans_30px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/trans_20px"
        android:paddingRight="@dimen/trans_20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/trans_10px"
            android:text="文件属性"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_18px"/>

        <com.gqfyanshi.widget.SelectPeopleLayout
            android:id="@+id/selectPeopleLayout1"
            android:layout_width="@dimen/trans_190px"
            android:layout_height="@dimen/trans_35px">

        </com.gqfyanshi.widget.SelectPeopleLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/trans_10px"
            android:text="签批人"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_18px"/>

        <LinearLayout
            android:id="@+id/lin_select2"
            android:layout_width="@dimen/trans_190px"
            android:layout_height="@dimen/trans_35px"
            android:background="@drawable/shape_grey_border_radiu5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_select2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:gravity="center_vertical"
                android:hint="自定义接收人"
                android:paddingLeft="@dimen/trans_5px"
                android:text=""
                android:textColor="@color/color_font1"
                android:textColorHint="@color/color_font3"
                android:textSize="@dimen/text_trans_16px"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/trans_5px"
                android:rotation="90"
                android:src="@drawable/xiangqing"
                />


        </LinearLayout>


    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/trans_30px"/>

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_500px"
        android:layout_marginLeft="@dimen/trans_20px"
        android:layout_marginRight="@dimen/trans_20px"
        android:background="@drawable/shape_white_radiu_t10"
        android:gravity="left"
        android:hint="请输入公文内容..."
        android:padding="@dimen/trans_20px"
        android:text=""
        android:textColor="@color/color_font1"
        android:textColorHint="@color/color_font3"
        android:textSize="@dimen/text_trans_16px"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.fivefivelike.mybaselibrary.view.RoundButton
        android:layout_width="@dimen/trans_130px"
        android:layout_height="@dimen/trans_40px"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="发送"
        android:textColor="@color/white"
        android:textSize="@dimen/text_trans_18px"
        app:btnCornerRadius="@dimen/trans_5px"
        app:btnSolidColor="@color/mark_color"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>