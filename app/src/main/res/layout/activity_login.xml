<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg"
              android:orientation="vertical">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="80"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="60"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="265"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/logo"
            />


        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="60"/>
    </LinearLayout>


    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="40"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="220"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="230">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="180"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="20"/>

                    <LinearLayout
                        android:id="@+id/lin_login"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="427"
                        android:background="@color/base_mask"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="25"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="315"
                            android:orientation="vertical">


                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="10"/>


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="105"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/touxiang"
                                />

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="10"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="50"
                                android:background="@color/white"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:adjustViewBounds="true"
                                    android:padding="15px"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/user"
                                    />

                                <View
                                    android:layout_width="2px"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5px"
                                    android:layout_marginTop="5px"
                                    android:background="@color/base_mask"/>

                                <EditText
                                    android:id="@+id/tv_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:hint="请输入您的账号"
                                    android:padding="15px"
                                    android:textColor="@color/color_font1"
                                    android:textColorHint="@color/color_font3"
                                    android:textSize="16px"/>


                            </LinearLayout>

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="10"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="50"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"
                                        android:padding="15px"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/locked"
                                        />

                                    <View
                                        android:layout_width="2px"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="5px"
                                        android:layout_marginTop="5px"
                                        android:background="@color/base_mask"/>

                                    <EditText
                                        android:id="@+id/tv_code"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@null"
                                        android:hint="手机验证码"
                                        android:padding="15px"
                                        android:textColor="@color/color_font1"
                                        android:textColorHint="@color/color_font3"
                                        android:textSize="16px"/>
                                </LinearLayout>

                                <Space
                                    android:layout_width="10px"
                                    android:layout_height="wrap_content"/>

                                <com.fivefivelike.mybaselibrary.view.RoundButton
                                    android:id="@+id/tv_send_code"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="发送验证码"
                                    android:textColor="@color/white"
                                    android:textSize="16px"
                                    app:btnCornerRadius="10px"
                                    app:btnSolidColor="@color/mark_color"
                                    app:btnStrokeWidth="2px"
                                    />

                            </LinearLayout>

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="10"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="50"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/white"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:adjustViewBounds="true"
                                        android:padding="15px"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/write"
                                        />

                                    <View
                                        android:layout_width="2px"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="5px"
                                        android:layout_marginTop="5px"
                                        android:background="@color/base_mask"/>

                                    <EditText
                                        android:id="@+id/tv_img_code"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@null"
                                        android:hint="图形验证码"
                                        android:padding="15px"
                                        android:textColor="@color/color_font1"
                                        android:textColorHint="@color/color_font3"
                                        android:textSize="16px"/>
                                </LinearLayout>

                                <Space
                                    android:layout_width="10px"
                                    android:layout_height="wrap_content"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/iv_img_code"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="match_parent"
                                        android:scaleType="fitXY"
                                        />



                                    <TextView
                                        android:id="@+id/tv_change"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:paddingLeft="5px"
                                        android:gravity="center"
                                        android:text="换一张"
                                        android:textColor="@color/color_font1"
                                        android:textSize="14px"/>


                                </LinearLayout>


                            </LinearLayout>

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="10"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="40"
                                android:orientation="vertical">
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="50"
                                android:orientation="vertical">
                            </LinearLayout>

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="15"/>


                        </LinearLayout>


                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="25"/>
                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/feiji"
                />

        </FrameLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"/>

    </LinearLayout>


    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="150"/>

</LinearLayout>