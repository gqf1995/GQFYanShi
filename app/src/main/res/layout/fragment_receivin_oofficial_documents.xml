<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/trans_20px"
        android:paddingLeft="@dimen/trans_20px"
        android:paddingTop="@dimen/trans_20px">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biaoti"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/trans_10px"
            android:text="搜索查询"
            android:textColor="@color/mark_color"
            android:textSize="@dimen/text_trans_18px"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/trans_20px"
        android:paddingRight="@dimen/trans_20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/trans_10px"
            android:text="文件字号"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_18px"/>

        <EditText
            android:id="@+id/et_num"
            android:layout_width="@dimen/trans_260px"
            android:layout_height="@dimen/trans_35px"
            android:background="@drawable/shape_grey_border_radiu5"
            android:gravity="center_vertical"
            android:hint="输入文件字号"
            android:paddingLeft="@dimen/trans_10px"
            android:text=""
            android:textColor="@color/color_font1"
            android:textColorHint="@color/color_font3"
            android:textSize="@dimen/text_trans_16px"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/trans_10px"
            android:text="文件名称"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_18px"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="@dimen/trans_260px"
            android:layout_height="@dimen/trans_35px"
            android:background="@drawable/shape_grey_border_radiu5"
            android:gravity="center_vertical"
            android:hint="输入文件名称"
            android:paddingLeft="@dimen/trans_10px"
            android:text=""
            android:textColor="@color/color_font1"
            android:textColorHint="@color/color_font3"
            android:textSize="@dimen/text_trans_16px"/>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/trans_20px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/trans_20px"
        android:paddingRight="@dimen/trans_20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/trans_10px"
            android:text="文件属性"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_18px"/>

        <com.gqfyanshi.widget.SelectAttrLayout
            android:id="@+id/selectPeopleLayout1"
            android:layout_width="@dimen/trans_130px"
            android:layout_height="@dimen/trans_35px">

        </com.gqfyanshi.widget.SelectAttrLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/trans_10px"
            android:text="发布时间"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_18px"/>

        <com.gqfyanshi.widget.SelectTimeLayout
            android:id="@+id/selectTimeLayout1"
            android:layout_width="@dimen/trans_120px"
            android:layout_height="@dimen/trans_35px">

        </com.gqfyanshi.widget.SelectTimeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/trans_10px"
            android:paddingRight="@dimen/trans_10px"
            android:text="至"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_14px"/>

        <com.gqfyanshi.widget.SelectTimeLayout
            android:id="@+id/selectTimeLayout2"
            android:layout_width="@dimen/trans_120px"
            android:layout_height="@dimen/trans_35px">

        </com.gqfyanshi.widget.SelectTimeLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.fivefivelike.mybaselibrary.view.RoundButton
            android:id="@+id/tv_search"
            android:layout_width="@dimen/trans_80px"
            android:layout_height="@dimen/trans_35px"
            android:gravity="center"
            android:text="查找"
            android:textColor="@color/white"
            android:textSize="@dimen/text_trans_16px"
            app:btnCornerRadius="@dimen/trans_5px"
            app:btnSolidColor="@color/mark_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/trans_20px"
        android:paddingLeft="@dimen/trans_20px"
        android:paddingRight="@dimen/trans_20px"
        android:paddingTop="@dimen/trans_20px">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lin_title1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="@dimen/trans_10px"
                            android:paddingRight="@dimen/trans_10px"
                            android:text="党委"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_18px"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="更多"
                            android:textColor="@color/color_font3"
                            android:textSize="@dimen/text_trans_16px"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/trans_5px"
                            android:layout_marginRight="@dimen/trans_5px"
                            android:src="@drawable/xiangqing"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/trans_1px"
                        android:background="@color/base_mask"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/trans_300px"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <Space
                android:layout_width="@dimen/trans_15px"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lin_title2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_title2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="@dimen/trans_10px"
                            android:paddingRight="@dimen/trans_10px"
                            android:text="党群口文件"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_18px"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="更多"
                            android:textColor="@color/color_font3"
                            android:textSize="@dimen/text_trans_16px"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/trans_5px"
                            android:layout_marginRight="@dimen/trans_5px"
                            android:src="@drawable/xiangqing"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/trans_1px"
                        android:background="@color/base_mask"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/trans_300px"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/trans_15px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lin_title3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_title3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="@dimen/trans_10px"
                            android:paddingRight="@dimen/trans_10px"
                            android:text="政府文件"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_18px"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="更多"
                            android:textColor="@color/color_font3"
                            android:textSize="@dimen/text_trans_16px"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/trans_5px"
                            android:layout_marginRight="@dimen/trans_5px"
                            android:src="@drawable/xiangqing"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/trans_1px"
                        android:background="@color/base_mask"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/trans_300px"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <Space
                android:layout_width="@dimen/trans_15px"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lin_title4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_title4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="@dimen/trans_10px"
                            android:paddingRight="@dimen/trans_10px"
                            android:text="政府部门文件"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_18px"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="更多"
                            android:textColor="@color/color_font3"
                            android:textSize="@dimen/text_trans_16px"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/trans_5px"
                            android:layout_marginRight="@dimen/trans_5px"
                            android:src="@drawable/xiangqing"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/trans_1px"
                        android:background="@color/base_mask"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/trans_300px"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>