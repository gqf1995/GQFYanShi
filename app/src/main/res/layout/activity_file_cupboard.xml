<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/include_toolbar_with_statusbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_60px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_new"
            android:layout_width="@dimen/trans_25px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/trans_20px"
            android:layout_marginRight="@dimen/trans_20px"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/xinjianwenjianjia"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/trans_10px"
            android:layout_marginRight="@dimen/trans_20px"
            android:layout_marginTop="@dimen/trans_10px"
            android:layout_weight="1"
            android:background="@drawable/shape_mask_maxradiu"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/trans_20px"
                android:layout_height="@dimen/trans_20px"
                android:layout_marginLeft="@dimen/trans_20px"
                android:layout_marginRight="@dimen/trans_15px"
                android:scaleType="fitXY"
                android:src="@drawable/sousuocu"
                />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_18px"/>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_20px"
        android:background="@color/base_mask"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>