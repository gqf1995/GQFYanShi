<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/include_toolbar_with_statusbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/trans_20px"
        android:paddingLeft="@dimen/trans_20px"
        android:paddingTop="@dimen/trans_20px">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biaoti"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/trans_10px"
            android:text="搜索查询"
            android:textColor="@color/mark_color"
            android:textSize="@dimen/text_trans_18px"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/trans_20px"
        android:paddingRight="@dimen/trans_20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/trans_10px"
            android:text="标题"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_18px"/>

        <LinearLayout
            android:id="@+id/lin_attributes"
            android:layout_width="@dimen/trans_130px"
            android:layout_height="@dimen/trans_35px"
            android:background="@drawable/shape_grey_border_radiu5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_attributes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="输入标题"
                android:paddingLeft="@dimen/trans_5px"
                android:text=""
                android:textColor="@color/color_font1"
                android:textColorHint="@color/color_font3"
                android:textSize="@dimen/text_trans_16px"/>


        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/trans_10px"
            android:text="发布时间"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_18px"/>

        <LinearLayout
            android:id="@+id/lin_select_time1"
            android:layout_width="@dimen/trans_120px"
            android:layout_height="@dimen/trans_35px"
            android:background="@drawable/shape_grey_border_radiu5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_time1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:gravity="center_vertical"
                android:hint="请选择"
                android:paddingLeft="@dimen/trans_5px"
                android:text=""
                android:textColor="@color/color_font1"
                android:textColorHint="@color/color_font3"
                android:textSize="@dimen/text_trans_16px"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/trans_5px"
                android:src="@drawable/rili"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/trans_10px"
            android:paddingRight="@dimen/trans_10px"
            android:text="至"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_14px"/>

        <LinearLayout
            android:id="@+id/lin_select_time2"
            android:layout_width="@dimen/trans_120px"
            android:layout_height="@dimen/trans_35px"
            android:background="@drawable/shape_grey_border_radiu5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_time2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:gravity="center_vertical"
                android:hint="请选择"
                android:paddingLeft="@dimen/trans_5px"
                android:text=""
                android:textColor="@color/color_font1"
                android:textColorHint="@color/color_font3"
                android:textSize="@dimen/text_trans_16px"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/trans_5px"
                android:src="@drawable/rili"
                />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.fivefivelike.mybaselibrary.view.RoundButton
            android:id="@+id/tv_search"
            android:layout_width="@dimen/trans_80px"
            android:layout_height="@dimen/trans_35px"
            android:gravity="center"
            android:text="查找"
            android:textColor="@color/white"
            android:textSize="@dimen/text_trans_16px"
            app:btnCornerRadius="@dimen/trans_5px"
            app:btnSolidColor="@color/mark_color"/>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/trans_30px"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_760px"
        android:layout_marginLeft="@dimen/trans_20px"
        android:layout_marginRight="@dimen/trans_20px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_60px"
            android:background="@color/base_mask"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/trans_60px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="序号"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_18px"/>

            <View
                android:layout_width="@dimen/trans_1px"
                android:layout_height="match_parent"
                android:background="@color/base_mask"/>

            <TextView
                android:layout_width="@dimen/trans_245px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="公告标题"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_18px"/>

            <View
                android:layout_width="@dimen/trans_1px"
                android:layout_height="match_parent"
                android:background="@color/base_mask"/>

            <TextView
                android:layout_width="@dimen/trans_160px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="发布人"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_18px"/>

            <View
                android:layout_width="@dimen/trans_1px"
                android:layout_height="match_parent"
                android:background="@color/base_mask"/>

            <TextView
                android:layout_width="@dimen/trans_160px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="发布时间"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_18px"/>

            <View
                android:layout_width="@dimen/trans_1px"
                android:layout_height="match_parent"
                android:background="@color/base_mask"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="操作"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_18px"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_40px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+ 添加"
                android:textColor="@color/mark_color"
                android:textSize="@dimen/text_trans_18px"/>


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_660px"/>

        <TextView
            android:id="@+id/tv_nodata"
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_60px"
            android:visibility="gone"
            android:gravity="center"
            android:text="没有找到匹配记录"
            android:textColor="@color/color_font3"
            android:textSize="@dimen/text_trans_18px" />

    </LinearLayout>


    <com.gqfyanshi.widget.PageChangeView
        android:id="@+id/pageChangeView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">


    </com.gqfyanshi.widget.PageChangeView>

</LinearLayout>